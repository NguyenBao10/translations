<?xml version="1.0" encoding="UTF-8"?>
<!-- ==================================================================  -->
<!-- Imports language files from it's own repos to the translation repo  -->
<!--                                                                     -->
<!-- note: you need to previously set your SSH local keys to work with   -->
<!--       Github                                                        -->
<!-- ==================================================================  -->
<project name="reditem2" default="update">
	<target name="github-clone">
		<echo>Updating en-GB redITEM2 files</echo>
		<delete dir="${project.basedir}/${phing.project.name}/tmp/" />
		<gitclone repository="https://github.com/redCOMPONENT-COM/redITEM2.git"
		          targetPath="${project.basedir}/${phing.project.name}/tmp/"
				/>
	</target>
	<target name="update" depends="github-clone">
		<!-- overwrite component/admin resources -->
		<echo msg="Copying redITEM2 component language files"/>
		<copy todir="${project.basedir}/${phing.project.name}/source/component/backend/en-GB/">
				<fileset dir="${project.basedir}/${phing.project.name}/tmp/component/admin/language/en-GB">
					<include name="*.ini" />
					<exclude name=".*"/>
				</fileset>
		</copy>
		<!-- overwrite component/site resources -->
		<echo msg="Copying redITEM2 component language files"/>
		<copy todir="${project.basedir}/${phing.project.name}/source/component/frontend/en-GB/">
			<fileset dir="${project.basedir}/${phing.project.name}/tmp/component/site/language/en-GB">
				<include name="*.ini" />
				<exclude name=".*"/>
			</fileset>
		</copy>
		<!-- overwrite modules/site resources -->
		<echo msg="Copying mod_reditem_categories language files"/>
		<copy todir="${project.basedir}/${phing.project.name}/source/modules/site/mod_reditem_categories/en-GB/">
			<fileset dir="${project.basedir}/${phing.project.name}/tmp/modules/site/mod_reditem_categories/language/en-GB">
				<include name="*.ini" />
				<exclude name=".*"/>
			</fileset>
		</copy>
		<echo msg="Copying mod_reditem_categories_gmap language files"/>
		<copy todir="${project.basedir}/${phing.project.name}/source/modules/site/mod_reditem_categories_gmap/en-GB/">
			<fileset dir="${project.basedir}/${phing.project.name}/tmp/modules/site/mod_reditem_categories_gmap/language/en-GB">
				<include name="*.ini" />
				<exclude name=".*"/>
			</fileset>
		</copy>
		<echo msg="Copying mod_reditem_items language files"/>
		<copy todir="${project.basedir}/${phing.project.name}/source/modules/site/mod_reditem_items/en-GB/">
			<fileset dir="${project.basedir}/${phing.project.name}/tmp/modules/site/mod_reditem_items/language/en-GB">
				<include name="*.ini" />
				<exclude name=".*"/>
			</fileset>
		</copy>
		<echo msg="Copying mod_reditem_relateditems language files"/>
		<copy todir="${project.basedir}/${phing.project.name}/source/modules/site/mod_reditem_relateditems/en-GB/">
			<fileset dir="${project.basedir}/${phing.project.name}/tmp/modules/site/mod_reditem_relateditems/language/en-GB">
				<include name="*.ini" />
				<exclude name=".*"/>
			</fileset>
		</copy>
	</target>
</project>